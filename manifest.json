{ "manifest_version": 2,
  "name": "InstantDarkMode",
  "version": "1.0",

  "description": "Add color inverting CSS to your pages to simulate Dark Mode",

  "icons": {
    "48": "icons/logo.svg"
  },

  "permissions" : ["activeTab"],

  "browser_action" : {
    "default_icon" : "icons/logo.svg",
    "default_title" : "InstantDarkMode"
  },

  "background" : {
    "scripts" : ["./background.js"]
  },

  "commands" : {
    "_execute_browser_action": {
        "suggested_key": {
            "default" : "Shift+Alt+D"
        }
    }
  }
}
